generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            Int          @id @default(autoincrement())
  name          String
  email         String?      @unique
  emailVerified DateTime?
  bio           String?
  skills        String[]
  image         String?
  repos         Repository[] @relation("UserRepos")
  issues        UserIssue[]

  accounts Account[]
  sessions Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            Int
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       Int
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Repository {
  id          Int     @id @default(autoincrement())
  githubUrl   String
  name        String
  owner       String
  description String
  language    String
  stars       Int
  forks       Int
  issueCount  Int
  issues      Issue[]
  user        User[]  @relation("UserRepos")

  @@unique([name, owner], name: "name_owner")
}

model Issue {
  id               Int    @id @default(autoincrement())
  // --- GitHub identity ---
  githubId         String // GitHub global issue ID
  githubNumber     Int // Issue number within repo (#123)
  githubUrl        String // htmlUrl
  githubApiUrl     String // apiUrl
  repositoryAPIUrl String

  // --- Core issue content ---
  title String
  body  String?

  state         String // "open" | "closed"
  isPullRequest Boolean @default(false)
  commentsCount Int     @default(0)

  // --- Labels ---
  labels   String[] // GitHub labels (names only)
  ailabels String[] // AI-generated labels

  // --- Relations ---
  repoId Int
  repo   Repository @relation(fields: [repoId], references: [id])

  users UserIssue[]

  // --- AI / enrichment ---

  // --- Timestamps ---
  githubCreatedAt DateTime
  githubUpdatedAt DateTime
  githubClosedAt  DateTime?

  createdAt DateTime @default(now())

  @@unique([githubId])
  @@unique([repoId, githubNumber])
}

model UserIssue {
  id Int @id @default(autoincrement())

  userId  Int
  issueId Int

  user           User     @relation(fields: [userId], references: [id])
  issue          Issue    @relation(fields: [issueId], references: [id])
  summary        String?
  difficulty     String?
  skills         String[]
  cause          String?
  approach       String?
  recommendation String?
  status         String
  notes          String?

  createdAt DateTime @default(now())

  @@unique([userId, issueId])
}
